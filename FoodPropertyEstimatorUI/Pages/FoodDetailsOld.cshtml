    	<button  asp-page-handler="Calculate">Calculate Thermo-Physical Properties</button>
        <br />
        <br />
    </form>


    @Html.LabelFor(m => m.ThermalConductivity)
    @Html.TextBoxFor(m => m.ThermalConductivity)
    <label> W/(m•K) </label>
