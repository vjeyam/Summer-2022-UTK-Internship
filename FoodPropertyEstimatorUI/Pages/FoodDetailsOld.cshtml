@model FoodPropertyEstimatorUI.Pages.FoodDetailsModel
@{
    @Html.LabelFor(m => m.Protein)
    @Html.TextBoxFor(m => m.Protein)
    <br /> 
    <br />
    
    @Html.LabelFor(m => m.Fat)
    @Html.TextBoxFor(m => m.Fat) 
    <br />
    <br />

    @Html.LabelFor(m => m.Carbohydrate)
    @Html.TextBoxFor(m => m.Carbohydrate) 
    <br />
    <br />

    @Html.LabelFor(m => m.Ash)
    @Html.TextBoxFor(m => m.Ash)
    <br />
    <br />

    @Html.LabelFor(m => m.Water)
    @Html.TextBoxFor(m => m.Water)
    <br />
    <br />

    @Html.LabelFor(m => m.Fiber)
    @Html.TextBoxFor(m => m.Fiber) 
    <br />
    <br />

    @Html.LabelFor(m => m.Total)
    @Html.TextBoxFor(m => m.Total) 
    <br />
    <br />

    <form method="POST">
        @Html.LabelFor(m => m.Temperature)
        @Html.TextBoxFor(m => m.Temperature)
