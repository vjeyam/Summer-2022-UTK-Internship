    @Html.TextBoxFor(m => m.Density)
    <label> kg/m<sup>3</sup> </label> 
    <br />
    <br />

    @Html.LabelFor(m => m.SpecificHeatCapacity)
    @Html.TextBoxFor(m => m.SpecificHeatCapacity)
    <label> kJ/(kg•°C) </label>
    <br />
    <br />

    @Html.LabelFor(m => m.ThermalDiffusivity)
    @Html.TextBoxFor(m => m.ThermalDiffusivity)
